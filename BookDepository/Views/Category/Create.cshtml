@using BookDepository.Models;
@model Category
@{
    ViewData["Title"] = "Create Category";   
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control-color" style="width:150px" required="The name is required">
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control-color" style="width:150px">
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Category" asp-action="Categories" class="btn btn-secondary" style="width:150px">Go back</a>
    </div>

</form>